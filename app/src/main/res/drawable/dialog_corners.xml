<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- we define background color -->
    <solid android:color="@color/white" />
    <gradient android:startColor="@color/grad1" android:endColor="@color/grad2">    </gradient>


    <!-- we define border color and thick -->
    <stroke
        android:width="3dp"
        android:color="@color/black" />

    <!-- add some padding for text inside -->
    <padding
        android:bottom="15dp"
        android:left="5dp"
        android:right="5dp"
        android:top="15dp" />

    <!-- we define corner radius, note that radius can be different for each corner -->
    <corners android:radius="30dp" />


</shape>